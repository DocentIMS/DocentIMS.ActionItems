<aside class="card portlet filterResponsible collectionFilter pat-collectionfilter" data-pat-collectionfilter="{&quot;collectionUUID&quot;: &quot;&quot;, 
        &quot;reloadURL&quot;: &quot;@@render-portlet&quot;, 
        &quot;ajaxLoad&quot;: false, 
        &quot;contentSelector&quot;: 
        &quot;#content-core&quot;}">
  <header class="card-header portletHeader">Show</header>
  <div class="card-body portletContent filterContent">
    <select id="notification-filter" class="form-select" name="906c6f6e652e7269676874636f66974656d732d636f6c6c656374696f6e0a636f6cc656374696f6e66696c746572726573706f6e7369626c65">
      <option class="filterItem filter-unread" 
        data-url=""
        value="choose" tal:attributes="selected python: view.get_selected_value() == 'choose'">
        Choose
      </option>

      <option class="filterItem filter-all" value="all" data-url="?collectionfilter=1" tal:attributes="selected python: view.get_selected_value() == 'all'">
        Unread
      </option>
      <option class="filterItem filter-unread" value="read" data-url="?collectionfilter=1&amp;show_all=1" tal:attributes="selected python: view.get_selected_value() == 'read'">
        All, read and unread
      </option>

    </select>
  </div>
</aside>
