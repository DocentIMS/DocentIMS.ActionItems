<?xml version="1.0"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    name="Meeting Minutes"
    meta_type="Dexterity FTI"
    i18n:domain="DocentIMS.ActionItems">

  <!-- Basic properties -->
  <property name="title" i18n:translate="">Meeting Minutes</property>
  <property name="description"
      i18n:translate="">Meeting minutes content type to link with Docent in Word.  A Word template is on the server.  When user uses the Docent toolbar to create a new document based on selection, Word, via API, gets the Word template for the doc type, creates new instance of doc type in Word.  users works in Word, when done, uploads Word file.  in addition, there are defined items uploaded via API so they can be shown in table.</property>
  
  <property name="allow_discussion">False</property>
  <property name="factory">Meeting Minutes</property>
  <property name="icon_expr">string:contenttype/meeting-minutes</property>
  <property name="link_target"></property>

  <!-- Hierarchy control -->
  <property name="global_allow">False</property>
  <!-- Schema, class and security -->
  <property name="add_permission">DocentIMS.ActionItems.AddMeeting</property>
  <property name="klass">plone.dexterity.content.Item</property>
  <property name="model_file">DocentIMS.ActionItems.content:meeting_minutes.xml</property>
  <property name="model_source"></property>
  <property name="schema"></property>

  <!-- Enabled behaviors -->
  <property name="behaviors" purge="false">
    <!-- Details about all standard behaviors following can be read at
         https://docs.plone.org/external/plone.app.dexterity/docs/reference/standard-behaviours.html
    -->
    <element value="plone.basic"/>
    <element value="plone.namefromtitle"/>
    <element value="plone.allowdiscussion"/>
    <element value="plone.excludefromnavigation"/>
    <element value="plone.shortname"/>
    <element value="plone.ownership"/>
    <element value="plone.publication"/>
    <element value="plone.categorization"/>
    <element value="plone.locking" />
    <element value="DocentIMS.ActionItems.only_office_file"/>
    <element value="plone.textindexer"/>
    <!--<element value="plone.leadimage"/>-->
    <!--<element value="plone.relateditems"/>-->
    <!--<element value="plone.richtext"/>-->
    <!--<element value="plone.tableofcontents"/>-->
    <!--<element value="plone.versioning" />-->
    <!--<element value="plone.translatable" />-->
  </property>

  <!-- View information -->
  <property name="add_view_expr">string:${folder_url}/++add++meeting_minutes</property>
  <property name="default_view">minutes-view</property>
  <property name="default_view_fallback">False</property>
  <property name="immediate_view">view</property>
  <property name="view_methods">
    <element value="view"/>
    <element value="minutes-view"/>

  </property>

  <!-- Method aliases -->
  <alias
      from="(Default)"
      to="(dynamic view)"
  />
  <alias
      from="edit"
      to="@@edit"
  />
  <alias
      from="sharing"
      to="@@sharing"
  />
  <alias
      from="view"
      to="(selected layout)"
  />

  <!-- Actions -->
  <action
      action_id="view"
      category="object"
      condition_expr=""
      i18n:attributes="title"
      i18n:domain="plone"
      title="View"
      url_expr="string:${object_url}"
      visible="True">
    <permission value="View"/>
  </action>
  <action
      action_id="edit"
      category="object"
      condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True"
      i18n:attributes="title"
      i18n:domain="plone"
      title="Edit"
      url_expr="string:${object_url}/edit"
      visible="True">
    <permission value="Modify portal content"/>
  </action>

</object>
