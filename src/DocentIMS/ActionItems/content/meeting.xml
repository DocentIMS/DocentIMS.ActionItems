<model xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xmlns:marshal="http://namespaces.plone.org/supermodel/marshal"
  xmlns:form="http://namespaces.plone.org/supermodel/form"
  xmlns:security="http://namespaces.plone.org/supermodel/security"
  xmlns:indexer="http://namespaces.plone.org/supermodel/indexer"
  xmlns:lingua="http://namespaces.plone.org/supermodel/lingua"
  xmlns:users="http://namespaces.plone.org/supermodel/users"
  xmlns="http://namespaces.plone.org/supermodel/schema">
  <schema>
    <field name="meeting_type" type="zope.schema.Choice">
      <description/>
      <required>False</required>
      <title>Meeting type</title>
      <vocabulary>DocentIMS.ActionItems.MeetingTypesVocabulary</vocabulary>
    </field>
    <field name="online_meeting_link" type="zope.schema.TextLine" form:omitted="true">
      <description/>
      <mode>hidden</mode>
      <required>False</required>
      <title>Online meeting UUID</title>
    </field>
    <fieldset name="attendees" label="Attendees">
      <field name="attendees_group" type="zope.schema.Set">
        <description/>
        <required>False</required>
        <title>Specific Groups</title>
        <value_type type="zope.schema.Choice">
          <vocabulary>plone.app.vocabularies.Groups</vocabulary>
        </value_type>
        <form:widget type="plone.app.z3cform.widgets.select.AjaxSelectFieldWidget"/>
      </field>
      <field name="online_meeting_link" type="zope.schema.TextLine">
        <description>This is link to either the Zoom or Team Meeting.</description>
        <required>False</required>
        <title>Online Meeting Link</title>
      </field>
    </fieldset>
  </schema>
</model>
